<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BackgroundSelection" >

    
    <TextView
        android:id="@+id/stageSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boy"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#ff69b4"
        android:fontFamily="assets/fonts/00starmaptruetype.ttf"
        android:text="Choose Your Stage" />

    <ImageButton
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/city1"
        android:layout_width="240dp"
        android:layout_height="144dp"
        android:layout_below="@+id/stageSelection"
        android:layout_toLeftOf="@+id/center"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:src="@drawable/bg0001" />

    <ImageButton
        android:id="@+id/city2"
        android:layout_width="240dp"
        android:layout_height="144dp"
        android:layout_below="@+id/stageSelection"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/center"
        android:background="@null"
        android:src="@drawable/bgcity20001" />

    <ImageButton
        android:id="@+id/underwater"
        android:layout_width="240dp"
        android:layout_height="144dp"
        android:layout_toLeftOf="@+id/center"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/city1"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:src="@drawable/bg_underwater0001" />
    
    <ImageButton
        android:id="@+id/space"
        android:layout_width="240dp"
        android:layout_height="144dp"
        android:layout_toRightOf="@+id/center"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/city2"
        android:layout_marginTop="30dp"        
        android:background="@null"
        android:src="@drawable/bg_space0001" />

</RelativeLayout>