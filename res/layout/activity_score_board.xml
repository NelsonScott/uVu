<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScoreBoard" >

    <ImageButton
        android:id="@+id/scoreBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/goback" />
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scoreBackButton"
        android:layout_below="@+id/TopBar"
        android:layout_marginTop="5dp" >

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard10"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/container_center" 
            android:layout_marginRight="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
            android:textColor="#ff0000"
            android:text="score1" />
        
		<Button
        android:id="@+id/container_center"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
		
        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard5"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/container_center" 
            android:layout_marginLeft="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
			android:gravity="right"
            android:textColor="#ff0000"
            android:text="score2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="5dp" >

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard9"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/container_center" 
            android:layout_marginRight="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"

            android:textColor="#0000ff"
            android:text="score3" />
        
        <Button
        android:id="@+id/container_center"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard4"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/container_center" 
            android:layout_marginLeft="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
			android:gravity="right"
            android:textColor="#0000ff"
            android:text="score4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="5dp" >

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard8"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/container_center" 
            android:layout_marginRight="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"

            android:textColor="#ffff00"
            android:text="score5" />
        
            <Button
	        android:id="@+id/container_center"
	        android:layout_centerInParent="true"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        />

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard3"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/container_center" 
            android:layout_marginLeft="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
			android:gravity="right"
            android:textColor="#ffff00"
            android:text="score6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="5dp" >

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard7"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/container_center" 
            android:layout_marginRight="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"

            android:textColor="#ffa500"
            android:text="score7" />
        
                    <Button
	        android:id="@+id/container_center"
	        android:layout_centerInParent="true"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        />
        

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard2"
           	android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/container_center" 
            android:layout_marginLeft="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
			android:gravity="right"
            android:textColor="#ffa500"
            android:text="score8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginTop="5dp">

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard6"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/container_center" 
            android:layout_marginRight="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"

            android:textColor="#00ff00"
            android:text="score9" />
        
                    <Button
	        android:id="@+id/container_center"
	        android:layout_centerInParent="true"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        />
        

        <TextView android:textSize="20sp"
            android:id="@+id/scoreBoard1"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/container_center" 
            android:layout_marginLeft="50dp"
            android:fontFamily="assets/fonts/00starmaptruetype.ttf"
            android:textColor="#00ff00"
            android:gravity="right"
            android:text="score10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="assets/fonts/00starmaptruetype.ttf"
        android:text="High Scores"
        android:textColor="#ff0000"
        android:textSize="20sp" />

</RelativeLayout>